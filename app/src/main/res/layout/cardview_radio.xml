<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:id="@+id/cardView"
    android:focusable="true"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/round_card"
            android:layout_marginTop="15dp"
            android:paddingStart="10dp"
            android:background="#efffd24c"
            android:backgroundTint="#efffd24c"
            card_view:cardCornerRadius="5dp">


            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:layout_gravity="center"
                android:layout_marginEnd="5dp"
                android:textSize="16sp"/>

        </android.support.v7.widget.CardView>


        <View
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/border"
            android:layout_toEndOf="@id/round_card"
            android:background="@color/lightgrey"
            android:layout_width="1dp"
            android:layout_height="45dp"/>


        <ImageView
            android:id="@+id/image_radio"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:layout_toEndOf="@id/border"
            />
        <ImageView
            android:id="@+id/equalizer"
            android:layout_width="wrap_content"

            android:layout_height="50dp"
            android:layout_alignTop="@+id/image_radio"
            android:layout_toStartOf="@+id/favourite"
            android:layout_marginEnd="21dp" />

        <ImageButton

            android:layout_alignParentEnd="true"
            android:id="@+id/favourite"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitCenter"
            />

    </RelativeLayout>
</android.support.v7.widget.CardView>
